from cgitb import text
from tkinter import *

window = Tk()
window.title("Mile to Km Converter")
window.minsize(200, 100)


def clicked_button():
    second_label["text"] = textfield.get()
    
textfield = Entry(width=7)
textfield.focus()
textfield.grid(column=1, row=0)
    
miles_label = Label(text="Miles")
miles_label.grid(column=2, row=0)

first_label = Label(text="is equal to")
first_label.grid(column=0, row=1)

second_label = Label(text="0")
second_label.grid(column=1, row=1)

third_label = Label(text="Km")
third_label.grid(column=2, row=1)

button = Button(text="Calculate", command=clicked_button)
button.grid(column=1, row=2)


window.mainloop()